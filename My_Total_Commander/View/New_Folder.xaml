<Window x:Class="My_Total_Commander.View.New_Folder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_Total_Commander.View"
        mc:Ignorable="d"
       ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Новая папка" Height="150" Width="550">
    <StackPanel Orientation="Horizontal" Background="GreenYellow">
        <TextBox x:Name="Name" Margin="10 20" Width="400" FontSize="30"/>
        <Button  Margin="10 30" Content="Добавить" Click="Button_Click"/>
    </StackPanel>
</Window>
